# Database Configuration
# For Docker Compose, use DB_HOST=db
DB_HOST=db
DB_PORT=3306
DB_NAME=message_system
DB_USER=systemuser
DB_PASSWORD=StrongPass123!

# Redis Configuration
# For Docker Compose, use REDIS_HOST=redis
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# Security - AES Encryption
# Paths should be relative to /app in Docker or absolute on host
AES_KEY_PATH=/app/main_server/secrets/encryption.key

# JWT Configuration
JWT_SECRET=SuperSecretJWTKey_ChangeInProduction
JWT_ALGORITHM=HS256
JWT_EXPIRE_MINUTES=30

# Admin Credentials (Portal)
ADMIN_USER=admin@example.com
ADMIN_PASS=AdminPass123!

# TLS/Certificate Paths
# Paths should be relative to /app/service_name/certs in Docker
CA_CERT_PATH=certs/ca.crt
SERVER_KEY_PATH=certs/server.key
SERVER_CERT_PATH=certs/server.crt

# Service Endpoints
# For Docker Compose, use service names
PROXY_URL=http://proxy:8001
MAIN_SERVER_URL=http://main_server:8000
PORTAL_URL=http://portal:8080

# Worker Configuration
WORKER_RETRY_INTERVAL=30
WORKER_MAX_ATTEMPTS=10000
WORKER_CONCURRENCY=4

# Logging
LOG_LEVEL=INFO
LOG_FILE_PATH=logs/
LOG_ROTATION_DAYS=7

# Monitoring
PROMETHEUS_PORT=9090
GRAFANA_PORT=3000

# Docker-specific
MAIN_SERVER_VERIFY_SSL=false

