# Portal Service Environment Configuration Template
# Note: Portal shares .env file with main_server on the main server
# These are portal-specific variables that should be in the shared .env file

# Main Server Configuration
# URL of the main server API that the portal connects to
MAIN_SERVER_URL=https://localhost:8000
# Set to false if using self-signed certificates
MAIN_SERVER_VERIFY_SSL=false

# Portal Server Configuration
# Host address to bind to (0.0.0.0 for all interfaces)
PORTAL_HOST=0.0.0.0
# Port for the portal web interface
PORTAL_PORT=8080

# Session Configuration
# Secret key for session encryption (generate with: openssl rand -hex 32)
SESSION_SECRET=change_this_session_secret_in_production
# Session duration in seconds (default: 3600 = 1 hour)
SESSION_MAX_AGE=3600

# Database Configuration (shared with main_server)
DB_HOST=localhost
DB_PORT=3306
DB_NAME=message_system
DB_USER=systemuser
DB_PASSWORD=MsgBrckr#TnN$2025

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE_PATH=/opt/message_broker/logs

# Pagination
MESSAGES_PER_PAGE=20

